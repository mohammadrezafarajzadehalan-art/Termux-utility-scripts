    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/starfx-css@1.0.0/starfx.min.css">
    <style>
        .cosmic-bg {
            background: radial-gradient(circle at center, #0c0032 0%, #190061 50%, #240090 100%);
            color: #e0e0ff;
            min-height: 100vh;
        }
        .story-card {
            background: rgba(255,255,255,0.1);
            border: 1px solid #4cc9f0;
            border-radius: 15px;
            padding: 20px;
            margin: 15px;
            transition: all 0.3s;
        }
        .story-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px #4cc9f0;
        }
        .star {
