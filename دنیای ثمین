<body class="cosmic-bg">
    <div class="container">
        <h1 class="star text-center">⭐ دنیای کیهانی سامین ⭐</h1>
        <div id="chapters-container"></div>
    </div>
    
    <script>
        // بارگذاری فصل‌ها
        const chapters = [
            {id: 62, title: "گذرنامه به جهان‌های موازی", content: "..."},
            {id: 63, title: "اداره پست کیهانی", content: "..."},
            // ... بقیه فصل‌ها
        ];
        
        // نمایش فصل‌ها
        chapters.forEach(chapter => {
            const card = document.createElement('div');
            card.className = 'story-card';
            card.innerHTML = `
                <h3>فصل ${chapter.id}: ${chapter.title}</h3>
                <p>${chapter.content.substring(0, 100)}...</p>
                <button onclick="readChapter(${chapter.id})">خواندن ادامه</button>
            `;
            document.getElementById('chapters-container').appendChild(card);
        });
    </script>
</body>
