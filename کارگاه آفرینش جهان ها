        time.sleep(1)
        
        # ุงูุชู ุฌูุงู
        universe = None
        for u in self.created_universes:
            if u["name"] == universe_name:
                universe = u
                break
        
        if universe:
            print("\n" + "="*50)
            print(f"๐ ุฌูุงู: {universe['name']}")
            print(f"๐ญ ููุถูุน: {universe['theme']}")
